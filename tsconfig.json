{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  // "jsxFragmentFactory": "Fragment",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "example"]
}
